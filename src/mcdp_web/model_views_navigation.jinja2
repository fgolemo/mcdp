<style type='text/css'>
div.navigation {font-size: smaller; }
div.navigation span.additional {margin-left: 2em; }
</style>

<div class="navigation">
  <button onclick="showPrompt();">+</button>

  <script type="text/javascript">
  window.showPrompt = function() {
    do {
        var name=prompt("Please enter the name for the new model:");
    }
    while(name.length < 4);
    window.location = "/new_model/" + name
  }
  </script>
  
  <span class='models'>
  Models:
  <select class='hot_select'>
    {% for m in models %}
    <option value="/models/{{m}}/{{current_view}}"    
	    {% if m == model_name %}
	    selected = 1
	    {% endif %}
    >
    	{{m}}
    </option>
    {% endfor %}
  </select>
  </span>
  
  <!--<a href="/edit/{{model_name}}">Edit</a>-->

  <form style='display:inline' method="POST" action="/edit/{{model_name}}">
    <input type="submit" value="Edit"/>
  </form>
  
  <span class='view'>
  View:
  <select class='hot_select'>
    {% for v in views %}
    <option value="/models/{{model_name}}/{{v}}"    
	    {% if v == current_view %}
	    selected = 1
	    {% endif %}
    >
    	{{v}}
    </option>
    {% endfor %}
  </select>
  </span>
   
  
<script type = "text/javascript">
 $('.hot_select').change(function() {
  window.location = $(this).val();
});
</script>

	<span class='additional'>
	<a href="{{request.url}}" target="_blank">open a copy</a>

	<a href="/refresh_library">refresh library</a>
	</span>
	
</div>